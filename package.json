{
  "name": "scrapbox-extensions",
  "version": "0.0.1",
  "main": "dist/main.js",
  "repository": "git@github.com:kouMatsumoto/scrapbox-extensions.git",
  "author": "kou.matsumoto <matsumoto@bitcoinbank.co.jp>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:scss && yarn build:ts",
    "build:scss": "node-sass src/styles/main.scss dist/style.css && uglifycss dist/style.css --output dist/style.min.css",
    "build:ts": "rollup -c",
    "check:build:tsc": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.json --noEmit",
    "check:diff": "git diff --exit-code --name-only ./src",
    "deploy": "yarn build && yarn ts-node src/deploy/main.ts",
    "ci:check": "yarn ci:check:build && yarn ci:check:test && yarn ci:check:lint",
    "ci:check:build": "yarn check:build:tsc && yarn build:ts && yarn build:scss",
    "ci:check:lint": "yarn format && yarn check:diff",
    "ci:check:test": "yarn test:unit --ci --silent --detectOpenHandles --forceExit --collectCoverage",
    "ci:deploy": "yarn deploy",
    "format": "yarn lint:scss --fix && prettier --config .prettierrc --write '{deploy,src,.circleci}/**/*.{ts,js,scss,md,yml}'",
    "lint:scss": "stylelint 'src/styles/**/*.scss'",
    "jest": "node --max_old_space_size=4096 ./node_modules/.bin/jest",
    "test:unit": "yarn jest -c jest.config.js",
    "ts-node": "node --max-old-space-size=8000 $(npm bin)/ts-node"
  },
  "engines": {
    "node": ">= 13.0.0",
    "yarn": ">=1.19.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@types/puppeteer": "^2.0.0",
    "jest": "^24.9.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "puppeteer": "^2.0.0",
    "rollup": "^1.27.8",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript": "^1.0.1",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "typescript": "^3.7.3",
    "uglifycss": "^0.0.29"
  },
  "dependencies": {
    "stylelint-config-recess-order": "^2.0.3"
  }
}
