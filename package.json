{
  "name": "scrapbox-extensions",
  "version": "0.0.1",
  "main": "dist/main.js",
  "repository": "git@github.com:kouMatsumoto/scrapbox-extensions.git",
  "author": "kou.matsumoto <matsumoto@bitcoinbank.co.jp>",
  "license": "MIT",
  "scripts": {
    "build:dev": "concurrently 'yarn :build:dev:scss' 'yarn :build:dev:ts'",
    "build:km-study:prod:scss": "node-sass src/styles/km-study.scss dist/km-study.css && uglifycss dist/km-study.css --output dist/km-study.min.css",
    "build:km-public:prod:scss": "node-sass src/styles/km-public.scss dist/km-public.css && uglifycss dist/km-public.css --output dist/km-public.min.css",
    "build:prod": "concurrently 'yarn build:prod:scss' 'yarn build:prod:ts'",
    "build:prod:scss": "concurrently 'yarn build:km-study:prod:scss' 'yarn build:km-public:prod:scss'",
    "build:prod:ts": "webpack --config webpack.config.prod.js",
    "check:build:tsc": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.json --noEmit",
    "check:diff": "git diff --exit-code --name-only .",
    "ci:check": "yarn ci:check:build && yarn ci:check:test && yarn ci:check:lint",
    "ci:check:build": "concurrently 'yarn check:build:tsc' 'yarn build:prod'",
    "ci:check:lint": "yarn format && yarn check:diff",
    "ci:check:test": "yarn test:unit --ci --silent --detectOpenHandles --forceExit",
    "ci:deploy": "yarn deploy",
    "deploy": "yarn build:prod && yarn ts-node src/deploy/main.ts",
    "format": "yarn lint:scss --fix && yarn lint:ts --fix && prettier --config .prettierrc --write '{deploy,src,.circleci}/**/*.{ts,js,scss,html,md,yml}' ./*.{js,json}",
    "lint:scss": "stylelint 'src/{scripts,styles}/**/*.scss'",
    "lint:ts": "eslint 'src/**/*.ts'",
    "make:version-file": "echo \"export const version = '`git rev-parse HEAD`'\" > version.ts",
    "jest": "node --max_old_space_size=4096 ./node_modules/.bin/jest",
    "start:dev": "yarn build:dev && concurrently 'yarn :build:dev:scss:watch' 'yarn :build:dev:ts:watch' 'browser-sync start --config bs-config.js'",
    "test:unit": "yarn jest -c jest.config.js",
    "ts-node": "node --max-old-space-size=8000 node_modules/.bin/ts-node --project tsconfig.json",
    ":build:dev:scss": "node-sass src/styles/km-study.scss dist/style.css",
    ":build:dev:scss:watch": "yarn :build:dev:scss && yarn :build:dev:scss -w",
    ":build:dev:ts": "webpack --config webpack.config.dev.js",
    ":build:dev:ts:watch": "yarn :build:dev:ts -w",
    "// 1": "special scripts",
    "prebuild:prod:ts": "yarn make:version-file",
    "prepare": "yarn make:version-file"
  },
  "engines": {
    "node": ">= 13.0.0",
    "yarn": ">=1.19.0"
  },
  "dependencies": {
    "fp-ts": "^2.5.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.5",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/puppeteer": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-jest": "^25.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "date-fns": "^2.12.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "html-loader": "^1.1.0",
    "html-loader-jest": "^0.2.1",
    "jest": "^25.4.0",
    "node-sass": "^4.14.0",
    "prettier": "^2.0.5",
    "puppeteer": "^2.1.1",
    "stylelint": "^13.3.3",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.17.1",
    "svg-inline-loader": "^0.8.2",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3",
    "uglifycss": "^0.0.29",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
