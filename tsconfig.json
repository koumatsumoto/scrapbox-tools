{
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./",
    "outDir": "dist",
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "sourceMap": true,
    "inlineSources": true
  }
}
