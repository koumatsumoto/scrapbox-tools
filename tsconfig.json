{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./",
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "sourceMap": true
  },
  "include": ["src/types/**/*.ts", "src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
