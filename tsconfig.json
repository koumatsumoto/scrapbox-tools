{
  "include": ["src/**/*.ts", "src/**/*.spec.ts"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "sourceMap": true,
    "inlineSources": false
  }
}
